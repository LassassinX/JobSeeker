<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".app.homePage.CreateProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@color/job_seeker_logo_green"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldFirstName"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:hint="First Name"
        android:textColorHint="#4A0CBC20"
        app:endIconMode="clear_text"
        app:endIconTint="#FF0000"
        app:hintTextColor="@color/job_seeker_logo_green">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/job_seeker_logo_green" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldLastName"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:hint="Last Name"
        android:textColorHint="#4A0CBC20"
        app:endIconMode="clear_text"
        app:endIconTint="#FF0000"
        app:hintTextColor="@color/job_seeker_logo_green">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/job_seeker_logo_green" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldBkashNo"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginTop="@dimen/_20sdp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:hint="Bkash Number"
        android:textColorHint="#4A0CBC20"
        app:endIconMode="clear_text"
        app:endIconTint="#FF0000"
        app:hintTextColor="@color/job_seeker_logo_green">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/job_seeker_logo_green" />
    </com.google.android.material.textfield.TextInputLayout>


    <ImageView
        android:id="@+id/profile_Image"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/white"
        android:src="@drawable/upload_pic"
        />

    <at.markushi.ui.CircleButton
        android:id="@+id/uniBtn"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/ic_plus"
        android:elevation="@dimen/_5sdp"
        app:cb_color="@color/job_seeker_logo_green"
        android:layout_gravity="center"
        app:cb_pressedRingWidth="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_minus40sdp"
        android:onClick="uploadImage"
        />

<!--    <TextView-->
<!--        android:id="@+id/imageUpload"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="@dimen/_5sdp"-->
<!--        android:onClick="uploadImage"-->
<!--        android:text="Click here to upload" />-->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:onClick="update"
        android:text="Update" />


</LinearLayout>