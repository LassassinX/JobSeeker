<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/profile_Image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/upload_pic" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:id="@+id/proPicBtn"
        android:onClick="uploadProPic"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:backgroundTint="@color/job_seeker_logo_green"
        app:cornerRadius="@dimen/_30sdp"
        android:insetTop="0dp"
        android:elevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_minus13sdp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:layout_gravity="center_horizontal"
        app:icon="@drawable/ic_plus"
        app:iconTint="@color/white"
        app:iconSize="@dimen/_19sdp"
        app:iconPadding="0dp"
        android:padding="0dp"
        app:iconGravity="textStart"
        app:rippleColor="@color/white"
        />


    <TextView
        android:id="@+id/profile_picture_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/job_seeker_logo_green"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_light"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:text="Professional Profile Picture" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldFirstName"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:hint="First Name"
        app:errorEnabled="true"
        app:endIconMode="clear_text"
        android:textColorHint="@color/job_seeker_green_hint"
        app:endIconTint="@color/job_seeker_logo_green"
        app:hintTextColor="@color/job_seeker_logo_green">


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:singleLine="true"
            android:textColor="@color/job_seeker_logo_green" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldLastName"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        app:endIconTint="@color/job_seeker_logo_green"
        android:hint="Last Name"
        android:textColorHint="@color/job_seeker_green_hint"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:hintTextColor="@color/job_seeker_logo_green">

        <com.google.android.material.textfield.TextInputEditText
            android:fontFamily="@font/roboto_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/job_seeker_logo_green" />

    </com.google.android.material.textfield.TextInputLayout>





</LinearLayout>