<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JobSeeker" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/job_seeker_logo_green</item>
        <!-- Secondary brand color. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/job_seeker_logo_green</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_list</item>

        <item name="android:statusBarColor">@color/job_seeker_logo_green</item>
        <item name="android:navigationBarColor">@color/job_seeker_logo_green</item>
    </style>

    <style name="CreateUser" parent="Theme.MaterialComponents.Light">

    </style>
    <style name="Navigation" parent="Theme.JobSeeker">
        <item name="colorPrimary">@color/job_seeker_logo_green</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/input_etext_outline_color</item>
    </style>
</resources>