<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:fontFamily="@font/roboto_light"
        android:lineSpacingExtra="@dimen/_3sdp"
        android:text="Your payment will be sent to the mobile number you enter below through Bkash."
        android:textAlignment="textStart"
        android:textColor="@color/job_seeker_logo_green"
        android:textSize="@dimen/_15sdp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/outlinedTextFieldBkashNo"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:hint="Bkash Number"
        android:textColorHint="@color/job_seeker_green_hint"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:endIconTint="@color/job_seeker_logo_green"
        app:hintTextColor="@color/job_seeker_logo_green"
        >

        <com.google.android.material.textfield.TextInputEditText

            android:id="@+id/text"
            android:fontFamily="@font/roboto_light"
            android:layout_width="match_parent"
            android:inputType="number"
            android:drawableEnd="@drawable/ic_phone"
            android:drawableTint="@color/job_seeker_logo_green"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textColor="@color/job_seeker_logo_green" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/createProfile"
        android:background="@drawable/button_background"
        android:drawablePadding="@dimen/_6sdp"
        android:drawableTint="@color/white"
        android:fontFamily="@font/roboto_light"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingHorizontal="@dimen/_25sdp"
        android:paddingVertical="@dimen/_6sdp"
        android:text="Create Profile"
        android:onClick="createProfile"
        android:textAllCaps="false"
        android:textColor="@color/job_seeker_logo_green"
        android:textSize="@dimen/_16sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_60sdp"/>

    <TextView
        android:id="@+id/budgetWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/roboto_light_italic"
        android:text="By creating my profile I agree to\nthe terms and conditions of Job Seeker"
        android:textAlignment="center"
        android:textColor="@color/job_seeker_logo_green"
        />

</LinearLayout>