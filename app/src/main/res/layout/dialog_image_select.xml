<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="9"
                android:fontFamily="@font/roboto_light"
                android:text="Select Image"
                android:textAlignment="textStart"
                android:textColor="@color/job_seeker_logo_green"
                android:textSize="@dimen/_20sdp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:orientation="vertical">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/close"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/white"
                    android:elevation="0dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    android:shadowColor="@color/white"
                    app:cornerRadius="@dimen/_30sdp"
                    app:icon="@drawable/ic_round_clear_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/_15sdp"
                    app:iconTint="@color/job_seeker_logo_green"
                    app:rippleColor="@color/job_seeker_green_hint" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/job_seeker_green_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="10">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/button_background_filled"
                android:drawablePadding="@dimen/_7sdp"
                android:drawableStart="@drawable/ic_gallery"
                android:drawableTint="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/galleryButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Open Gallery"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <View
                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:background="@drawable/button_background_filled"
                android:drawablePadding="@dimen/_7sdp"
                android:drawableStart="@drawable/ic__camera"
                android:drawableTint="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:id="@+id/cameraButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Open Camera"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>